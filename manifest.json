{
    "manifest_version": 2,

    "name": "Sobnik: фильтрует риелторов",
    "description": "Выявляет посредников в объявлениях по недвижимости",
    "version": "1.11",

    "icons": { 
	"128": "images/icon_128.png" 
    },

    "permissions": [
	"http://sobnik.com/*",
	"http://www.avito.ru/*",
	"https://www.avito.ru/*",
	"tabs",
        "pageCapture"
    ],

    "background": {
	"scripts": ["jquery.js", "jquery.cookie.js", "api.js", "sobnik.js"]
    },
    
    "content_scripts": [
	{
	    "matches": ["http://www.avito.ru/*", "https://www.avito.ru/*"],
	    "js": ["jquery.js", "api.js", "avito.js"]
	}
    ],

    "page_action": {
        "default_icon": {
            "19": "images/icon_19.png",
            "38": "images/icon_38.png"
        },
        "default_title": "Sobnik",
        "default_popup": "popup.html"
    }
}
