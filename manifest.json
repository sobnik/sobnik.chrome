{
    "manifest_version": 2,

    "name": "Sobnik: фильтрует риелторов",
    "description": "Выявляет посредников в объявлениях по недвижимости",
    "version": "1.24",

    "icons": { 
	"128": "images/icon_128.png" 
    },

    "permissions": [
	"http://sobnik.com/*",
	"http://localhost:8081/*",
	"http://www.avito.ru/*",
	"https://www.avito.ru/*",
	"http://www.cian.ru/*",
	"https://www.cian.ru/*",
	"tabs",
        "pageCapture",
	"storage"
    ],

    "options_page": "settings.html",

    "background": {
	"scripts": ["jquery.js", 
		    "init.js",
		    "cmn.js",
		    "server.js", 
		    "crawler.js",
		    "capture.js",
		    "bg.js"]
    },
    
    "content_scripts": [
	{
	    "matches": ["http://www.avito.ru/*", "https://www.avito.ru/*"],
	    "js": ["jquery.js", 
		   "jsfeat-min.js", 
		   "init.js",
		   "cmn.js",
		   "pimg.js",
		   "boards.js", 
		   "avito.js", 
		   "capture.js", 
		   "server.js", 
		   "parser.js", 
		   "crawler.js", 
		   "marker.js", 
		   "ui.js", 
		   "tab.js"]
	},
	{
	    "matches": ["http://www.cian.ru/*", "https://www.cian.ru/*"],
	    "js": ["jquery.js", 
		   "jsfeat-min.js", 
		   "init.js",
		   "cmn.js",
		   "pimg.js",
		   "boards.js", 
		   "cian.js", 
		   "capture.js", 
		   "server.js", 
		   "parser.js", 
		   "crawler.js", 
		   "marker.js", 
		   "ui.js", 
		   "tab.js"]
	}
    ],

    "page_action": {
        "default_icon": {
            "19": "images/icon_19.png",
            "38": "images/icon_38.png"
        },
        "default_title": "Sobnik",
        "default_popup": "popup.html"
    }

}
